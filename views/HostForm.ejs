            <div class="formscontainer">
                <div class="registerforms">
                    <input id="capacity" name = "total_capacity" class="capacity" type="text" placeholder="CAPACITY" />
                </div>
    
                <div class="registerforms">
                    <input id="floors" name = "floors" class="floors" type="text" placeholder="FLOORS" />
                </div>
            </div>

