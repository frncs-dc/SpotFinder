        <hr class="border">
        <div class="maincontainer">
            <div class="columnforms">
                <div class="indivforms">
                    FLAT RATE
                </div>
                <div id="flatRateFields" class="indivforms hidden">
                    <input id="flatAmt" name = "flat__amount" class="amount" type="text" placeholder="AMOUNT">
                </div>
                <div id="flatHoursFields" class="indivforms hidden">
                    <input id="flatHours" name = "flat__hours" class="hours" type="text" placeholder="HOURS">
                </div>
            </div>
            
            <div class="columnforms">
                <div class="indivforms">
                HOURLY RATE
                </div>
                <div id="hourRateFields" class="indivforms hidden">
                <input id="isHourAmt" name = "hour__amount" class="amount" type="text" placeholder="AMOUNT">
                </div>
                <div id="hourHoursFields" class="indivforms hidden">
                <input id="isHourHours" name = "hour__hours" class="hours" type="text" placeholder="HOURS">
                </div>
            </div>
        </div>
        

        <div class="navigation-buttons">
            <input class="prev" onclick="location.href='/Profile'" type="button" value="EXIT">
            <input class="next" type="submit" value="SUBMIT">
