            <div class = "indivforms">
                <input id="spotName" type="text" name="name" placeholder="NAME">
            </div>

            <!--Multi-Form Inputs-->
            <div class="formscontainer">
                <div class="forms1">
                    <input id="region" type="text" name="address__region" placeholder="REGION">
                </div>
                <div class="forms2">
                    <input id="city" type="text" name="address__city" placeholder="CITY">                
                </div>
            </div>

            <!--Individual Form Inputs-->
            <div class = "indivforms">
                <input id="address" type="text" name="address" placeholder="ADDRESS">
            </div>

            <div class = "indivforms">
                <input id="address" type="text" name="post__description" placeholder="DESCRIPTION">
            </div>
            <div class="indivforms">
                <label for="post__picture"><b>Profile Picture</b></label>
                <input type="text" placeholder="Enter Imgur Url for Picture" name="post__picture">
            </div>
            
        </div>
        <br>
        <hr class="border">
        <div class="maincontainer">
            <div class="title">
                PARKING DETAILS
            </div>
