<!DOCTYPE html>
<html>
    <head>
        <title>SPOT FINDER</title>
        <link rel="stylesheet" href="/css/HostForm.css">
    </head>

    <body>
        <header>

            <!--Just Tabs-->
            <div class ="tabs">
                <a class="tab" href="index.html">HOME</a>
                <a class="tab">PARK</a>
                <a class="tab" href="Customer Support.html">CONTACT</a>
                <textarea class="search"></textarea>
                <img src="/img/profile.png" class="profile">
                <a class="profile" href="/Profile"><%= current_user.username %></a>
                <img src="/img/logout.png" class="logout">
            </div>

            <!--Title-->
            <div id="Title-section">
                Host your parking slot.
            </div>
        </header>

        <!--Body-->
        <form>
            <div class="maincontainer">
                <div class="title">
                    BASIC DETAILS
                </div>
                <!--Individual Form Inputs-->
                <div class = "indivforms">
                    <input id="spotName" type="text" name="Enter-name" placeholder="NAME" required>
                </div>
    
                <!--Multi-Form Inputs-->
                <div class="formscontainer">
                    <div class="forms1">
                        <input id="region" type="text" name="Enter-region" placeholder="REGION" required>
                    </div>
                    <div class="forms2">
                        <input id="city" type="text" name="Enter-city" placeholder="CITY" required>                
                    </div>
                </div>
    
                <!--Individual Form Inputs-->
                <div class = "indivforms">
                    <input id="address" type="text" name="Enter-name" placeholder="ADDRESS" required>
                </div>
            </div>
            <br>
            <hr class="border">
            <div class="maincontainer">
                <div class="title">
                    PARKING DETAILS
                </div>
                <!--Individual Form Inputs-->
                <div class="indivforms">
                    <input type="checkbox" id="is_assigned" />
                    <label for="is_assigned">ASSIGNED PARKING?</label>
                </div>
    
                <!--Multi-Form Inputs-->
                <div class="formscontainer">
                    <div class="registerforms">
                        <input id="capacity" class="capacity" type="text" placeholder="CAPACITY" />
                    </div>
        
                    <div class="registerforms">
                        <input id="floors" class="floors" type="text" placeholder="FLOORS" />
                    </div>
                </div>
    
                <div class="indivforms">
                    SUPPORTED VEHICLES:
                </div> 
                <div class="indivforms">
                    <input type="checkbox" id="isCars" />
                    <label for="is_public">CARS</label>
                </div>
                <div class="indivforms">
                    <input type="checkbox" id="isMotor" />
                    <label for="is_covered">MOTORCYCLES</label>
                </div>
                <div class="indivforms">
                    <input type="checkbox" id="isBikes" />
                    <label for="is_secure">BIKES</label>
                </div>
                <!-- <input type="button" value="EDIT MAP" class="edit-map" onclick="location.href='Host-Form Page 4.html'"/> -->
            </div>
            <br>
            <hr class="border">
            <div class="maincontainer">
                <div class="columnforms">
                    <div class="indivforms">
                      <input id="isFlatRate" type="checkbox"> 
                      FLAT RATE
                    </div>
                    <div id="flatRateFields" class="indivforms hidden">
                      <input id="flatAmt" class="amount" type="text" placeholder="AMOUNT">
                    </div>
                    <div id="flatHoursFields" class="indivforms hidden">
                      <input id="flatHours" class="hours" type="text" placeholder="HOURS">
                    </div>
                </div>
                
                <div class="columnforms">
                    <div class="indivforms">
                    <input id="isHourRate" type="checkbox"> 
                    HOURLY RATE
                    </div>
                    <div id="hourRateFields" class="indivforms hidden">
                    <input id="isHourAmt" class="amount" type="text" placeholder="AMOUNT">
                    </div>
                    <div id="hourHoursFields" class="indivforms hidden">
                    <input id="isHourHours" class="hours" type="text" placeholder="HOURS">
                    </div>
                </div>
            </div>
            
    
            <div class="navigation-buttons">
                <input class="prev" onclick="location.href='/Profile'" type="button"value="EXIT">
                <input class="next" onclick="location.href='/Profile'" type="submit" value="SUBMIT">
            </div>
        </form>
        <script>
            function toggleFields(fieldName) {
              const fieldElement = document.getElementById(fieldName);
              if (fieldElement) {
                fieldElement.classList.toggle('hidden');
              }
            }
      
            // Get references to the checkboxes
            const isFlatRate = document.getElementById('isFlatRate');
            const isHourRate = document.getElementById('isHourRate');
      
            // Get references to the fields
            const flatRateFields = document.getElementById('flatRateFields');
            const flatHoursFields = document.getElementById('flatHoursFields');
            const flatAmt = document.getElementById('flatAmt');
            const flatHours = document.getElementById('flatHours');
            
            const hourRateFields = document.getElementById('hourRateFields');
            const hourHoursFields = document.getElementById('hourHoursFields');
            const hourAmt = document.getElementById('isHourAmt');
            const hourHours = document.getElementById('isHourHours');
      
            isFlatRate.addEventListener('change', () => {
                    if (isFlatRate.checked) {
                        flatRateFields.classList.remove('hidden');
                        flatHoursFields.classList.remove('hidden');
                    } else {
                        flatRateFields.classList.add('hidden');
                        flatHoursFields.classList.add('hidden');
                    }
                });

                isHourRate.addEventListener('change', () => {
                    if (isHourRate.checked) {
                        hourRateFields.classList.remove('hidden');
                        hourHoursFields.classList.remove('hidden');
                        if (flatAmt.value === '' || flatHours.value === '') {
                            alert("Please fill in the required fields for FLAT RATE.");
                        }
                    } else {
                        hourRateFields.classList.add('hidden');
                        hourHoursFields.classList.add('hidden');
                    }
                });
          </script>
    </body>
</html>
